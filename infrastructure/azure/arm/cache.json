{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "redisCacheName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev"
    },
    "virtualNetworkId": {
      "type": "string"
    },
    "privateEndpointSubnetId": {
      "type": "string"
    }
  },
  "variables": {
    "skuName": "[if(equals(parameters('environment'), 'prod'), 'Premium', 'Basic')]",
    "skuFamily": "[if(equals(parameters('environment'), 'prod'), 'P', 'C')]",
    "skuCapacity": "[if(equals(parameters('environment'), 'prod'), 1, 0)]"
  },
  "resources": [
    {
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2023-08-01",
      "name": "[parameters('redisCacheName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "[variables('skuName')]",
          "family": "[variables('skuFamily')]",
          "capacity": "[variables('skuCapacity')]"
        },
        "enableNonSslPort": false,
        "minimumTlsVersion": "1.2",
        "publicNetworkAccess": "Disabled",
        "redisConfiguration": {
          "maxmemory-policy": "allkeys-lru"
        }
      }
    }
  ],
  "outputs": {
    "redisCacheId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Cache/redis', parameters('redisCacheName'))]"
    }
  }
}