{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "PostgreSQL database infrastructure for Indian Legal AI Assistant"
  },
  "parameters": {
    "postgreSqlServerName": {
      "type": "string",
      "metadata": {
        "description": "Name of the PostgreSQL server"
      }
    },
    "administratorLogin": {
      "type": "string",
      "metadata": {
        "description": "Administrator login for PostgreSQL server"
      }
    },
    "administratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Administrator password for PostgreSQL server"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name"
      }
    },
    "virtualNetworkId": {
      "type": "string",
      "metadata": {
        "description": "Virtual network ID"
      }
    },
    "privateEndpointSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Private endpoint subnet ID"
      }
    }
  },
  "variables": {
    "skuName": "[if(equals(parameters('environment'), 'prod'), 'Standard_D2s_v3', 'Burstable_B1ms')]",
    "skuTier": "[if(equals(parameters('environment'), 'prod'), 'GeneralPurpose', 'Burstable')]",
    "storageSizeGB": "[if(equals(parameters('environment'), 'prod'), 128, 32)]",
    "backupRetentionDays": "[if(equals(parameters('environment'), 'prod'), 35, 7)]",
    "privateEndpointName": "[concat(parameters('postgreSqlServerName'), '-pe')]",
    "privateDnsZoneName": "privatelink.postgres.database.azure.com"
  },
  "resources": [
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2023-06-01-preview",
      "name": "[parameters('postgreSqlServerName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[variables('skuName')]",
        "tier": "[variables('skuTier')]"
      },
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "version": "15",
        "storage": {
          "storageSizeGB": "[variables('storageSizeGB')]",
          "autoGrow": "Enabled"
        },
        "backup": {
          "backupRetentionDays": "[variables('backupRetentionDays')]",
          "geoRedundantBackup": "[if(equals(parameters('environment'), 'prod'), 'Enabled', 'Disabled')]"
        },
        "network": {
          "publicNetworkAccess": "Disabled"
        },
        "highAvailability": {
          "mode": "[if(equals(parameters('environment'), 'prod'), 'ZoneRedundant', 'Disabled')]"
        },
        "maintenanceWindow": {
          "customWindow": "Enabled",
          "dayOfWeek": 0,
          "startHour": 2,
          "startMinute": 0
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
      "apiVersion": "2023-06-01-preview",
      "name": "[concat(parameters('postgreSqlServerName'), '/legal_ai')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))]"
      ],
      "properties": {
        "charset": "UTF8",
        "collation": "en_US.utf8"
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/configurations",
      "apiVersion": "2023-06-01-preview",
      "name": "[concat(parameters('postgreSqlServerName'), '/shared_preload_libraries')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))]"
      ],
      "properties": {
        "value": "vector",
        "source": "user-override"
      }
    },
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2020-06-01",
      "name": "[variables('privateDnsZoneName')]",
      "location": "global",
      "properties": {}
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2020-06-01",
      "name": "[concat(variables('privateDnsZoneName'), '/', parameters('postgreSqlServerName'), '-link')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[parameters('virtualNetworkId')]"
        }
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2023-04-01",
      "name": "[variables('privateEndpointName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))]"
      ],
      "properties": {
        "subnet": {
          "id": "[parameters('privateEndpointSubnetId')]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[variables('privateEndpointName')]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))]",
              "groupIds": [
                "postgresqlServer"
              ]
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
      "apiVersion": "2023-04-01",
      "name": "[concat(variables('privateEndpointName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateEndpoints', variables('privateEndpointName'))]",
        "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
      ],
      "properties": {
        "privateDnsZoneConfigs": [
          {
            "name": "config1",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "postgreSqlServerId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))]"
    },
    "postgreSqlServerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))).fullyQualifiedDomainName]"
    },
    "connectionString": {
      "type": "string",
      "value": "[concat('postgresql://', parameters('administratorLogin'), ':', parameters('administratorLoginPassword'), '@', reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgreSqlServerName'))).fullyQualifiedDomainName, ':5432/legal_ai?sslmode=require')]"
    }
  }
}